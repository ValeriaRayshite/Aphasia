html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
	margin: 0;
	padding: 0;
	border: 0;	
}


html, body {
	height: 100%;
	min-height: 500px;
	min-width: 1000px;
	width: 100%;
	font-size: 16px;
	position: relative;
}



/* Content section */

h1 {
	font: 2.5em 'Playfair Display', serif;
        margin-bottom: 50px
; 
}

#content {
	width: 50%;
	margin: 0 auto;
	font: 1.2em 'Open Sans', sans-serif;
        color: #2f4e73;
	position: relative;
	padding-top: 150px;
}

div>p:first-letter {
	font: 3em 'Playfair Display', serif;
	float: left;
	margin: 0 15px; 
}

#content img {
	width: 80%;
	height: auto;
	margin: 30px auto;
	position: relative;
	display: block;
	clear: both;
}




#logo {
	width: 80px;
	position: fixed;
	right: 60px;
	top: 20px;
	float: right;
        cursor: pointer;
}


/* Left menu */

nav {
	left: 20px;
	top: 20px;
	width: 20%;
	float: left;
	position: absolute;
}

nav ul li:first-child {
	font: 2.5em 'Open Sans Condensed', sans-serif;
	margin-bottom: 20px;
}

nav ul li:last-child {
	margin-top: 20px;
}

nav ul li a {
	text-decoration: none;
	color: #000;
	
}

nav ul li{
	list-style-type: none;
	padding-bottom: 10px;
	font: 1.5em 'Open Sans Condensed', sans-serif;
}

.active {
	color: #99bddc;
}

ul li::selection, p::selection, a::selection {
	background: #99bddc; 
	color: #000;
}
ul li::-moz-selection, p::-moz-selection, a::-moz-selection {
	background: #99bddc; 
	color: #000;
}




footer {
	font: 1.3em 'Open Sans Condensed', sans-serif;
	color: #757575;
	text-align: center;
	
	margin: 300px 0 50px;
	width: 100%;
}



 /* Form */

label {
	width: 100%;
	font-size: 1.2em;
	margin-top: 50px;
    display:inline-block;
 }

input[type=text], textarea {
    width: 100%;
    border: none;
    border-radius: 0;
    border-bottom: 1px solid #2f4e73;
    box-sizing: border-box;
    padding: 10px;
}

input[type=text]:focus, textarea:focus {
 	border-bottom: 2px solid #2f4e73;
 	outline: none;
 }

input[type=submit] {
    margin: 3%;
    display: block;
    width: 115px;
    height: 50px;
    background: #99bddc;
    padding: 10px;
    text-align: center;
    border-radius: 5px;
    color: white;
    font: 1.2em 'Open Sans Condensed', sans-serif;
    box-sizing: border-box;
    border: 0;
    cursor: pointer;
}

input[type=submit]:hover, input[type=submit]#delete:hover {
    background: #2f4e73;
}
